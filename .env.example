# Server Configuration
PORT=5000
NODE_ENV=development
API_URL=http://localhost:5000

# Database - MongoDB
# Local MongoDB: mongodb://localhost:27017/sociogram
# MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/sociogram
DB_URL=mongodb://localhost:27017/sociogram

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars-recommended
JWT_EXPIRATION=7d

# Firebase Configuration
# Option 1: Service Account JSON (base64 encoded)
# Get this from Firebase Console > Project Settings > Service Accounts > Generate New Private Key
# Then encode the JSON content to base64
FIREBASE_SERVICE_ACCOUNT=

# Option 2: Individual Firebase credentials
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nYourPrivateKeyHere\n-----END PRIVATE KEY-----
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
